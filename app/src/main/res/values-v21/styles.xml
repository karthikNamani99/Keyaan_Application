<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Edittext_DateTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/bluegray800</item>
        <item name="android:textColorHint">@color/bluegray300</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:elevation">@dimen/_6sdp</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@drawable/background_rectangle_stroke</item>
    </style>

    <style name="Edittext_Editable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/bluegray800</item>
        <item name="android:textColorHint">@color/bluegray300</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
    </style>

    <style name="Button_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textColor">#F2ffffff</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/_5sdp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:background">@drawable/background_rectangle_nostroke</item>
    </style>

    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:colorAccent">@color/jet_black</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>