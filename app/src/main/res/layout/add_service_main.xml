<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_Title"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Select Category"
                android:textColor="@color/jet_black" />

            <FrameLayout
                android:id="@+id/layout_catergory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/background_rectangle_stroke">

                <Spinner
                    android:id="@+id/spnr_catergory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_minus10sdp"
                    android:alpha="0.9"
                    android:entries="@array/categorytypes" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_Title"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Select SubCategory"
                android:textColor="@color/jet_black" />

            <FrameLayout
                android:id="@+id/layout_subcatergory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/background_rectangle_stroke">

                <Spinner
                    android:id="@+id/spnr_subcatergory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_minus10sdp"
                    android:alpha="0.9"
                    android:entries="@array/subcategorytypes" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_Title"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Select SubSubCategory"
                android:textColor="@color/jet_black" />

            <FrameLayout
                android:id="@+id/layout_subsubcatergory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/background_rectangle_stroke">

                <Spinner
                    android:id="@+id/spnr_subsubcatergory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_minus10sdp"
                    android:alpha="0.9"
                    android:entries="@array/subsubcategorytypes" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/TextStyle_Title"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="Select City"
                android:textColor="@color/jet_black" />

            <FrameLayout
                android:id="@+id/layout_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/background_rectangle_stroke">

                <Spinner
                    android:id="@+id/spnr_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_minus10sdp"
                    android:alpha="0.9"
                    android:entries="@array/cities" />
            </FrameLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-condensed"
            android:background="@color/theme_blue_primary"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>

</LinearLayout>